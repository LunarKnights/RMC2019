<launch>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="verbose" default="true"/>
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find lk_rmc_description)/urdf/model.xacro" />
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find lk_rmc_gazebo)/worlds/slam_hallway.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
    <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" args="joint_state_controller skid_steer_drive_controller"/>


  <rosparam file="$(find lk_rmc_gazebo)/config/gazebo_ros_control_params.yaml"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <!-- <rosparam file="$(find lk_rmc_gazebo)/config/gazebo_ros_control_params.yaml" command="load"/> -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model sirdigsalot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
  </launch>
